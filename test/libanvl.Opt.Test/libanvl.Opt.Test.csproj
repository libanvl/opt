<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks Condition=" 'RUNNER_OS' == 'Windows' or 'RUNNER_OS' == ''">net8.0;net480</TargetFrameworks>
    <TargetFrameworks Condition=" 'RUNNER_OS' != 'Windows' and 'RUNNER_OS' != ''">net8.0;net480</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <RootNamespace>libanvl.opt.test</RootNamespace>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <TestingPlatformDotnetTestSupport>false</TestingPlatformDotnetTestSupport>
    <UseMicrosoftTestingPlatformRunner>false</UseMicrosoftTestingPlatformRunner>
  </PropertyGroup>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="xunit.runner.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="xunit.v3" />
    <PackageReference Include="PolySharp" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\libanvl.Opt\libanvl.Opt.csproj" />
  </ItemGroup>

</Project>
